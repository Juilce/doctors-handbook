<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:text="Add new prescription"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="5dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_height="1dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider">
        <EditText
            android:layout_width="match_parent"
            android:hint="Patient"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/disease_label"
        app:layout_constraintTop_toBottomOf="@id/patient"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:text="Disease: "
        android:padding="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/disease"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/patient"
        app:layout_constraintLeft_toRightOf="@id/disease_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        tools:text="Flu"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/medicine_label"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/disease"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:text="Medicine: "
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/medicine"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/disease"
        app:layout_constraintLeft_toRightOf="@id/medicine_label"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        tools:text="Advil"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Save" android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>